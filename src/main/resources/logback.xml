<configuration>
  <appender name="stdout" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%date{HH:mm:ss.SSS} [%thread] %-5level %logger{36} \(%method\) - %message%n</pattern>
    </encoder>
  </appender>

  <root level="info">
    <appender-ref ref="stdout" />
  </root>
</configuration>
